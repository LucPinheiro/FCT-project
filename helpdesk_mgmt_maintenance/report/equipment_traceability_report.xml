<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="equipment_traceability_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="oe_structure" />
                <div class="page">
                    <div class="text-center"><h2>Equipment Traceability</h2></div>

                    <table class="table o_main_table table-centered" name="contratos">
                        <thead>
                            <tr>
                                <th>Equipment</th>
                                <th>Serial number</th>
                                <th>Category</th>
                                <th>Assign date</th>
                                <th>Ticket</th>
                                <th class="text-right">NÂº Ticket</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td> <span t-field="o.name" /> </td>
                                    <td> <span t-field="o.serial_no" /> </td>
                                    <td> <span t-field="o.category_id" /> </td>
                                    <td> <span t-field="o.assign_date" /> </td>
                                    <td> <span t-field="o.ticket_ids" /> </td>
                                    <td class="text-right"> <span t-field="o.ticket_count" /> </td>
 
                                </tr>
                            </t>
                        </tbody>

                    </table>
                </div>
            </t>
        </t>
    </template>

    <record id="action_report_equipment_traceabilitty" model="ir.actions.report">
        <field name="name">Equipment Traceability</field>
        <field name="model">maintenance.equipment</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">helpdesk_mgmt_maintenance.equipment_traceability_report_template</field>
        <field name="report_file">helpdesk_mgmt_maintenance.equipment_traceability_report_template</field>
        <field name="binding_model_id" ref="maintenance.model_maintenance_equipment"/>
        <field name="binding_type">report</field>
    </record>

</odoo>