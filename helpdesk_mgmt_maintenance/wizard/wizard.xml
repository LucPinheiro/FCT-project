<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="maintenance_equipment_report_wizard_view_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.report.wizard.view.form</field>
        <field name="model">maintenance.equipment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Traceability">
                <sheet>
                    <group>
                        <field name="date_start" />
                        <field name="date_end" />
                    </group>
                    <footer>
                        <button name="action_search_orders" type="object" string="Buscar" class="btn-primary" />
                        <button string="Cancelar" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="helpdesk_mgmt_wizard_traceability_line_action" model="ir.actions.act_window">
        <field name="name">Equipment Line Traceability</field>
        <field name="res_model">maintenance.equipment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="maintenance_equipment_report_wizard_view_form" />
        <field name="target">new</field>
    </record>
	

    <menuitem
        id="maintenance_traceability_line_menu_item"
        name="Equipment Line Traceability"
        action="helpdesk_mgmt_wizard_traceability_line_action"
        parent="maintenance.menu_equipment_form"
        sequence="120" />

</odoo>
